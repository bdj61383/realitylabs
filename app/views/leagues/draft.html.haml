%h1 LC Page
= @params
= current_user.league_id.class
= params[:id].class
%table
  %thead
    %tr
      %th Signed In
      %th Not Signed In

  %tbody
  - @users.each do |user|
    %tr
      =online(user)
      =offline(user) 

%div#draft_order
  %h3= "# of Available Contestants: #{@ncontestants}"
  %h3= "# of League Members: #{@nusers}"
  %h3= "Max # of contestants per team (also # of rounds in draft): #{@nrounds}" 
  %h3= "Length of draft pick array: #{@narray}"
  - @pick_list.each do |user|
    %p= user.username
  %p= @draft_order

=form_tag set_draft_path do
  / =hidden_field_tag "draft_order", @draft_order
  =submit_tag "Set Draft!", :id => "set_draft"

