<head>
  <title>Realitylabs</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <!-- <%= javascript_include_tag "application", "http://realitylabs-server.herokuapp.com/faye.js" %>  -->
  <%= csrf_meta_tags %>
</head>
<body class="bg_gradient">
  <header class = 'main_header'>
    <div class = 'rl_logo'><a href = "/"><img alt="Reality Labs" src="/assets/rl_logo.png"></a></div>
    <div class = 'surv_logo'> <img alt="Survivor Fantasy League" src="/assets/surv_logo.png"></div>
    <% if current_user %>
      <div class = 'signout'>
        Logged in as <%= current_user.username %>.
        <p><%= link_to "Log out", log_out_path %></p>
      </div>
    <% else %>
      <div class = 'signin'>
        <%= link_to 'Sign In', log_in_path %>
      </div>
    <% end %>
    
    <div class = 'clear'></div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}", :class => "flash" %>
    <% end %>
  </header>
  <div class = "bg_elements">
    <div class = 'main'>


<%= yield %>
    </div>
  </div>
  
</body>
</html>
