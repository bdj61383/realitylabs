%div.hero
  %div.hero_inset
    %div.log_in
      %h1 Sign in

      = form_tag sessions_path do
        %p
          = label_tag :username
          = text_field_tag :username, params[:username], :class => 'text_field'
        %p
          = label_tag :password
          = password_field_tag :password, nil, :class => 'text_field'
        =submit_tag 'Log in'
      = link_to "Forgot your password?", new_password_reset_path
    


