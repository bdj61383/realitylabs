%h1= @league.name
%h2= "Round #{@round}"
%table#scoreboard
  %thead
    %tr
      %th Username
      %th Score

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username 
        %td= user.score
%div#user_info
  %p= "Your score from last round is #{@user.score}"
  %p= "Your current score is #{@user.total_score}"
  %ul 
    Here are the folks on your team:
    - @user.team.each do |member|
      %li= member
%div#toolbar
  %ul
    %li My profile
    = lc
    =link_to "Draft Page", draft_page_path(@user.league_id)
    / %li= @user.lc == true ? "LC Control Box" : nil


